<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant  name="struts.custom.i18n.resources" value="i18n/base" />
        
    <package name="ems" namespace="/ems" extends="default">

        <action name="getHotels" class="hotelActionClass" method="doGetHotels">	
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">jsonStatus.*,hotels.*</param>
            </result>     
        </action>		
        
        
        <action name="getCountries" class="baseActionClass" method="doGetCountries">	
            <result name="success" type="json">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">jsonStatus.*,countries.*</param>
            </result>     
        </action>		

    </package>	
</struts>
